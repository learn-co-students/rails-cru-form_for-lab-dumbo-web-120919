<h1>Song Form</h1>

<%= form_for @song do |f| %>
  <%= f.label 'Song Name' %><br>
  <%= f.text_field :name %><br>

  <%= f.label 'Song Artist' %><br>
  <%# <%= f.text_field :artist_id%> 
  <%= f.collection_select :artist_id, @artists, :id, :name%><br>

  <%= f.label 'Song Genre' %><br>
  <%# <%= f.text_field :genre_id%> 
  <%= f.collection_select :genre_id, @genres, :id, :name%><br> 

  <%= f.submit "Create Song" %>
<% end %>











